
@{
    ViewBag.Title = "PrecioIncorrecto";
    GMIEntities db = new GMIEntities();
}

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">@TempData["mensaje"]</div>
}
@if (TempData["error"] != null)
{
    <div class="alert alert-warning">@TempData["error"]</div>
}


<br />
<br />
<section class="content-header">
    <center>
        <h1 style="color:#FF0000">
            ¡EL TOTAL PAGADO NO COINCIDE CON EL PRECIO ACTUAL DEL GESTOR!
        </h1>
    </center>
    <center>
        <h3 style="color:white">
            <b>Los precios actuales del gestor son los siguientes:</b> 
        </h3>
    </center>
    <center>
        <table>
            <thead style="color:white; text-align:center">
                <tr>
                    <th style="background-color:transparent; min-width: 200px; text-align:center; font-size:larger">
                       Tipo de Licencia
                    </th>
                    <th style="background-color:transparent; min-width: 150px; text-align:center; font-size:larger">
                        Precio con IVA
                    </th>
                    <th style="background-color:transparent; min-width: 150px; text-align:center; font-size:larger">
                        Precio sin IVA
                    </th>
                </tr>
            </thead>
            <tbody style="color:white; text-align:center">
                <tr>
                    <td>
                        Terrestre/Maritimo:
                    </td>
                    <td>
                        $@ViewBag.precioN
                    </td>
                    <td>
                        $@ViewBag.precioNIVA
                    </td>
                </tr>
                <tr>
                    <td>
                        Aéreo Tripulación:
                    </td>
                    <td>
                        $@ViewBag.precioAT
                    </td>
                    <td>
                        $@ViewBag.precioATIVA
                    </td>
                </tr>
                <tr>
                    <td>
                        Aéreo Pista:
                    </td>
                    <td>
                        $@ViewBag.precioP
                    </td>
                    <td>
                        $@ViewBag.precioPIVA
                    </td>
                </tr>
            </tbody>
        </table>
    </center>
</section>


<section class="content">
    <div class="error-page">
        <br />
        <br />
        <center>
            <h4 style="color: #ffffff">
                EN CASO DEL QUE EL CLIENTE HAYA PAGADO UNA CANTIDAD DIFERENTE, FAVOR DE PEDIRLE QUE PAGUE LA DIFERENCIA
            </h4>
        </center>
        <div class="error-content">
            <br />
            <br />
            <center>
                <h1 style="color: #ffffff">
                    @*CONTACTE AL ADMINISTRADOR*@
                </h1>
            </center>

        </div>
    </div>
</section>


<div class="enlaceSinBoton">
    @Html.ActionLink("Volver a Recepción", "Index")
</div>



<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

